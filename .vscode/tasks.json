{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C Project (Build & Execute)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "C:/MinGW/bin/gcc.exe \"${file}\" -o \"${fileDirname}\\${fileBasenameNoExtension}.exe\"; if ($?) { .\\${fileBasenameNoExtension}.exe }"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
